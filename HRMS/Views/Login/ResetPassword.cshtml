@using (Html.BeginForm("ResetPassword", "Login", FormMethod.Post, new { style = "width: -webkit-fill-available;" }))
{
    @Html.AntiForgeryToken()
    <body class="app flex-row align-items-center">
        <main class="main">
            <main class="container-fluid">
                <div class="title-wpr flex">
                    <div class="col-md-8">
                        <div class="card-group">
                            <div class="card p-4">
                                <div class="card-body">
                                    <h1>Reset Password</h1>
                                    <div class="input-group mb-3">
                                        <div class="input-group-prepend">
                                            <span class="input-group-text">
                                                <i class="icon-lock"></i>
                                            </span>
                                        </div>
                                        @Html.EditorFor(model => model.NewPassword, new { htmlAttributes = new { @class = "form-control", placeholder = "New Password", type = "password" } })
                                        <span asp-validation-for="NewPassword" class="text-danger"></span>
                                    </div>
                                    <div class="input-group mb-3">
                                        <div class="input-group-prepend">
                                            <span class="input-group-text">
                                                <i class="icon-lock"></i>
                                            </span>
                                        </div>
                                        @Html.EditorFor(model => model.ConfirmPassword, new { htmlAttributes = new { @class = "form-control", placeholder = "Confirm Password", type = "password" } })
                                        <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                                    </div>
                                    <div class="row">
                                        <div class="col-6">
                                            <button class="btn btn-primary px-4" type="submit">Reset My Password</button>
                                        </div>
                                        <div class="col-6 text-right">
                                            <button class="btn btn-link px-0" id="login" type="button">Back to login</button>
                                        </div>
                                    </div>
                                    model: @Html.HiddenFor(s => s.ResetCode)
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </main>

    </body>
}
<script type="text/javascript">

    $(document).ready(function () {


        $("#login").click(function () {
            window.location.href = "/Login/Index";
        });

    });

</script>
</html>