@using (Html.BeginForm("Index", "Login", FormMethod.Post, new { style = "width: -webkit-fill-available;" }))
{
    @Html.AntiForgeryToken()
        <body class="app flex-row align-items-center">
         <div class="container">
        <div class="row justify-content-center">
            <div class="col-md-6">
                <div class="clearfix">
                    <h1 class="display-3 mr-4">Password Reset Successfully</h1>
                    <p>
                        <h4 class="pt-3">Your password was reset successfully. You can now login with your new password.</h4>
                    </p>
                    <p class="text-muted"></p>
                        <input type="submit" class="btn btn-link px-0" id="login" value="Go to Sign in" />
                </div>
            </div>
        </div>
    </div>
        </body>
}
<script type="text/javascript">

    $(document).ready(function () {

        $("#login").click(function () {
            window.location.href = "/Login/Index";
        });

    });

</script>
